@model ServerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Server</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Server.Id" />
            <div class="form-group">
                <label asp-for="Server.ClientId" class="control-label"></label>
                <select asp-for="Server.ClientId" asp-items="@(new SelectList(Model.Clients,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Server.Type" class="control-label"></label>
                <input asp-for="Server.Type" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Hardware" class="control-label"></label>
                <input asp-for="Server.Hardware" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Hostname" class="control-label"></label>
                <input asp-for="Server.Hostname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Ip" class="control-label"></label>
                <input asp-for="Server.Ip" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.VersionSVX" class="control-label"></label>
                <input asp-for="Server.VersionSVX" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Os" class="control-label"></label>
                <input asp-for="Server.Os" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Database" class="control-label"></label>
                <input asp-for="Server.Database" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Perl" class="control-label"></label>
                <input asp-for="Server.Perl" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Server.Application" class="control-label"></label>
                <input asp-for="Server.Application" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



